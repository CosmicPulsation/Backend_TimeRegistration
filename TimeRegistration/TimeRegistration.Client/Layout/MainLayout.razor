@inherits LayoutComponentBase
<div class="columns is-gapless" style="height:100%">
    <div class="column is-3 has-background-info" style="max-height:100%; max-width:765px">
        <div class="has-text-primary columns m-0 is-flex is-flex-wrap-nowrap">
            <div class="column p-0">
                <figure class="image is-32x32">
                    <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
                </figure>
            </div>
            <div class="column p-2">
                User Name
            </div>
        </div>
        <div class="has-text-primary columns m-0 is-flex is-flex-wrap-nowrap">
            <div class="column p-2">Menu</div>
            <div class="column p-0">
                <button class="button is-primary is-outlined" style="float: right;">☰</button>
            </div>
        </div>
        <NavigationMenu />
    </div>
    <div class="column" style="max-height:100%">
        @Body
    </div>
</div>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
